{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block header %}{% endblock %}

{% block body %}
    <div class="form-control d-flex justify-content-center">
        <span class="border border-dark" style="padding: 10px">
            <div class=" align-items-center">
                <h1>entrez un nouveau produit</h1>
                {{ form_start(form) }}
                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.reference) }}
                </div>
                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.quantity) }}
                </div>
                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.emplacement) }}
                </div>

                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.date)}}
                </div>
                
                <div class="input-group input-group-sm mb-3">
                    {{ form_row(form.name_img) }}
                </div>
                <div class="input-group input-group-sm mb-3">
                    <button type="submit">envoyer </button>
                </div>
                    <br>
                    <br>
                    {% if code != "" %}
                        <p>votre code barre (n'oubliez pas de l'enregistrer): </p>
                        <br>
                        <img src="data:image/png;base64,{{code}}" alt="bare_code" class="img-fluid" style="margin-left: 100px">
                    {% endif %}
                    {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </span>
    </div>
{% endblock %}
