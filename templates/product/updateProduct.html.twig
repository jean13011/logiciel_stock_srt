{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block  body %}
    <br>
    <form action="{{path("product_search_reference")}}" method="get" class="form-inline d-flex justify-content-center md-form form-sm mt-0">
        <label for="reference">Réference: </label>
        <input type="text" name="product[reference]" id="product_reference">
        <button type="submit" >recherche</button>
    </form>
    
    <a href="{{path("product_search")}}">Retour au stock</a>
    <table class="table table-bordered bg-white" >
        <thead>
            <tr>
                <th class="text-center" scope="col">id: </th>
                <th class="text-center" scope="col" row="10" col="15">Nom: </th>
                <th class="text-center" scope="col">Réference :</th>
                <th class="text-center" scope="col">Quantité :</th>
                <th class="text-center" scope="col">Emplacement :</th>
            </tr>
        </thead>
        <tbody>
            <th class="text-center" scope="row" id="id"><strong>{{products.id}}</strong></th>
            <td class="text-center"><strong>{{products.name}}</strong></td>
            <td class="text-center"><strong>{{products.reference}}</strong> <a href="{{path("product_modify_reference", {"id" : products.id})}}"><button type="button" class="btn btn-warning"> Modifier </button></a></td>
            <td class="text-center">
                <div class="d-flex justify-content-center p-25">
                    <p id="quantity" class=''><strong>{{products.quantity}}</strong> </p>
                    <button type="button" onclick="Moin()" class="btn btn-danger btn-sm h-25" id="moin"> - </button>
                    <button type="button" onclick="Plus()" class="btn btn-success btn-sm h-25" id="plus"  > + </button>
                </div>
            </td>
            <td class="text-center"><strong>{{products.emplacement}}</strong></td>
        </tbody>
        <br><br>
    </table>
    <script src="{{asset('scripts/modifyQuantity.js')}}"></script>
{% endblock %}